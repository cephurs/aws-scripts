	autocrlf = input
	safecrlf = true
[github]
	user = gregburek
	token = 447a3ebd7574a3f27f1de282b42e96c1

[alias]
    # Source: http://www.metacircus.com/hacking/2011/02/18/play-git-like-a-violin.html
    # I like using the interactive mode to make complex commits
    ai = add --interactive

    # All the aliases relate to commits. Note that
    # they are grouped by common prefixes, so I don't
    # confuse what I want done by accident.
    c = commit
    # commit with a message
    cm = commit -m
    cma = commit -a -m
    # amending the previous commit
    ca = commit --amend
    caa = commit -a --amend -C HEAD

    # reset
    ## soft resets
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    ## hard resets
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh1 = reset HEAD^^ --hard

    # shortcuts for commands
    s = status
    d = diff
    a = add
    co = checkout
    b = branch
    l = log
    f = fetch
    r = reset
    p = push
    pom = push origin master

